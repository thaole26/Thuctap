<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#50CBF6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Mã ĐK (Primary Field) -->
        <TextView
            android:id="@+id/tvMaDienKe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã ĐK"
            android:textStyle="bold"
            app:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp" />

        <!-- Mã KH -->
        <TextView
            android:id="@+id/tvMaKH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã KH"
            app:textAppearance="?attr/textAppearanceBody1"
            android:layout_marginBottom="8dp" />

        <!-- Ngày Sản Xuất -->
        <TextView
            android:id="@+id/tvNgaySX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày Sản Xuất"
            app:textAppearance="?attr/textAppearanceBody1"
            android:layout_marginBottom="8dp" />

        <!-- Divider for visual separation -->

        <!-- Ngày Lắp -->
        <TextView
            android:id="@+id/tvNgayLap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày Lắp"
            app:textAppearance="?attr/textAppearanceBody1"
            android:layout_marginBottom="8dp" />

        <!-- Mô tả -->
        <TextView
            android:id="@+id/tvMota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            app:textAppearance="?attr/textAppearanceBody1"
            android:layout_marginBottom="8dp" />

        <!-- Trạng thái -->
        <TextView
            android:id="@+id/tvTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            app:textAppearance="?attr/textAppearanceBody1" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>