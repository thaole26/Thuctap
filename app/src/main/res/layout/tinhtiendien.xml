<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tính Tiền Điện"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Mã hóa đơn -->
        <TextView
            android:id="@+id/tvInvoiceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã hóa đơn: "
            android:padding="12dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edtInvoiceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- Mã điện kế -->
    <TextView
        android:id="@+id/tvMeterId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã điện kế: "
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/edtMeterId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- Kỳ hóa đơn -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kỳ hóa đơn: "
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/tvPeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- Chỉ số đầu -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉ số đầu: "
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvStartIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Chỉ số cuối -->
        <TextView
            android:id="@+id/tvEndIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉ số cuối: "
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/edtEndIndex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- Số kWh tiêu thụ -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số kWh tiêu thụ: "
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>
        <TextView
        android:id="@+id/tvConsumption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- Tổng tiền -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: "
        android:padding="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/tvTotalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>
    </LinearLayout>

    <!-- Nút tính tiền -->
    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tính Tiền"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/design_default_color_secondary_variant"
        android:drawableLeft="@android:drawable/ic_menu_edit"/>

    <!-- Nút lưu tổng tiền -->
    <Button
        android:id="@+id/btnSaveTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu Tổng Tiền"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/design_default_color_secondary_variant"
        android:drawableLeft="@android:drawable/ic_menu_save"/>

    <!-- Nút hủy -->
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hủy"
        android:layout_marginTop="8dp"
        android:backgroundTint="#6D6D6D"
        android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"/>

</LinearLayout>