<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.QLGiadienActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarQuanLyGia"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Quản Lý Giá Điện" />

    <LinearLayout
        android:id="@+id/layoutFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem giá năm:"
            android:layout_marginEnd="8dp"/>

        <Spinner
            android:id="@+id/spinnerChonNamXem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/buttonXemGiaTheoNam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewDanhSachLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách Bảng giá:"
        android:textStyle="bold"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDanhSachGia"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        android:contentDescription="Danh sách giá điện"
        tools:listitem="@layout/item_bang_gia" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/buttonThemBangGiaMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm bảng giá áp dụng"/>

        <Button
            android:id="@+id/buttonSuaBangGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Sửa bảng giá áp dụng"/>



    </LinearLayout>

</LinearLayout>