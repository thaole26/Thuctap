<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/delete_customer_layout"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvDeleteCustomerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xóa Khách Hàng"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <!-- Danh sách khách hàng -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCustomerListDelete"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="16dp"/>

    <!-- Nút xóa khách hàng -->
    <Button
        android:id="@+id/btnConfirmDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác Nhận Xóa"
        android:layout_marginTop="16dp"
        android:enabled="false"/>

    <!-- Nút quay lại -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quay Lại"
        android:backgroundTint="#6D6D6D"

        android:layout_marginTop="8dp"/>

</LinearLayout>