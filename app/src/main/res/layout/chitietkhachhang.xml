<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/update_customer_layout"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvUpdateCustomerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiết thông tin KH"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <!-- Mã khách hàng -->
    <EditText
        android:id="@+id/edtUpdateCustomerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã khách hàng"
        android:padding="12dp"
        android:inputType="text"
        android:layout_marginBottom="8dp"
        android:enabled="false"/>

    <!-- Tên khách hàng -->
    <EditText
        android:id="@+id/edtUpdateCustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên khách hàng"
        android:padding="12dp"
        android:inputType="textPersonName"
        android:layout_marginBottom="8dp"/>

    <!-- Số điện thoại -->
    <EditText
        android:id="@+id/edtUpdateCustomerPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại"
        android:padding="12dp"
        android:inputType="phone"
        android:layout_marginBottom="8dp"/>

    <!-- Địa chỉ -->
    <EditText
        android:id="@+id/edtUpdateCustomerAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Địa chỉ"
        android:padding="12dp"
        android:inputType="textPostalAddress"
        android:layout_marginBottom="8dp"/>

    <!-- CMND -->
    <EditText
        android:id="@+id/edtUpdateCustomerIDNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CMND"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Thông báo lỗi khi trùng dữ liệu (ẩn mặc định) -->
    <TextView
        android:id="@+id/tvUpdateErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="16dp"/>

    <!-- Nút lưu thông tin đã sửa -->
    <Button
        android:id="@+id/btnSaveUpdatedCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa Thông Tin"
        android:layout_marginTop="8dp"/>

    <!-- Nút quay lại -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quay Lại"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnDeleteCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xóa Khách Hàng"
        android:backgroundTint="#DE3131"
        android:layout_marginTop="64dp"/>

</LinearLayout>