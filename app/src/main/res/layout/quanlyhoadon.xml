<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý Hóa Đơn Và Tính Tiền Điện"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/edtSearchInvoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tìm kiếm hóa đơn"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnGenerateInvoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo Hóa Đơn"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <ListView
        android:id="@+id/lvInvoices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin hóa đơn"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <EditText
        android:id="@+id/edtInvoiceNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã số hóa đơn" />

    <EditText
        android:id="@+id/edtCustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên khách hàng" />

    <EditText
        android:id="@+id/edtCustomerAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Địa chỉ" />

    <EditText
        android:id="@+id/edtInvoicePeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kỳ hóa đơn" />

    <EditText
        android:id="@+id/edtStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Từ ngày" />

    <EditText
        android:id="@+id/edtEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đến ngày" />

    <EditText
        android:id="@+id/edtStartIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chỉ số đầu" />

    <EditText
        android:id="@+id/edtEndIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chỉ số cuối" />

    <EditText
        android:id="@+id/edtTotalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tổng tiền phải trả" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnEditInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:padding="10dp"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/btnDeleteInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:drawableLeft="@android:drawable/ic_menu_delete"
            android:padding="10dp"
            android:backgroundTint="@android:color/holo_red_light" />
    </LinearLayout>

</LinearLayout>